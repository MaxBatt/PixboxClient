    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
     
    <TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:text="Create a new user:"
    android:textAppearance="?android:attr/textAppearanceLarge" />
     
    <EditText
        android:id="@+id/editUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Username" >
     
    <requestFocus />
    </EditText>
     
    <ProgressBar
    android:id="@+id/progressBar1"
    style="?android:attr/progressBarStyleLarge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/editUsername"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="24dp" />
     
    <Button
        android:id="@+id/okBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/editUsername"
        android:layout_below="@+id/progressBar1"
        android:layout_marginTop="24dp"
        android:onClick="onBtnClicked"
        android:text="Create User" />

    <TextView
        android:id="@+id/tvUserResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editUsername"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/okBtn"
        android:layout_below="@+id/okBtn"
        android:layout_marginTop="29dp"
        android:text="" />
     
    </RelativeLayout>
     